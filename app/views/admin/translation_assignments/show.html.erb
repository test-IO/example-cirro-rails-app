<%= render partial: "admin/translation_assignments/details" %>
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="w-1/5 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                File
              </th>
              <th class="w-1/5 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="w-1/5 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Picked By
              </th>
              <th class="w-1/5 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Result
              </th>
              <th class="w-1/5 px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
              </th>
            </tr>
          </thead>
          <tbody>
            <% @assignment.translation_files.each do |translation_file| %>
              <%= render 'translation_file', translation_file: translation_file %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<% if @assignment.active? %>
  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
          <%= form_for @assignment, url: admin_translation_assignment_path(@assignment), method: :put do |form| %>
            <% disabled = !@assignment.archivable? %>
            <%= form.hidden_field :status, value: 'archived' %>
            <%= form.submit "Archive Assignment", class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 shadow-sm hover:bg-red-500 focus:outline-none focus:shadow-outline-blue focus:bg-red-500 active:bg-red-600 transition duration-150 ease-in-out #{ disabled && 'opacity-50 cursor-not-allowed' }", disabled: disabled %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
