<div class="p-5">
  <div class="mb-5">
    <div class="hidden sm:block">
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex">
          <% active_class = "w-1/3 py-3 px-1 text-center border-b-2 border-red-700 font-medium leading-5 text-red-700 focus:outline-none focus:text-red-800 focus:border-red-800" %>
          <% inactive_class = "w-1/3 py-3 px-1 text-center border-b-2 border-transparent font-medium leading-5 text-gray-500 hover:text-red-700 hover:border-red-300 focus:outline-none focus:text-gray-700 focus:border-gray-300" %>
          <%= link_to translation_assignments_path, class: @type == 'new' ? active_class : inactive_class do %>
            New Assignments
          <% end %>
          <%= link_to translation_assignments_path(type: 'current'), class: @type == 'current' ? active_class : inactive_class do %>
            Current Assignments
          <% end %>
          <%= link_to translation_assignments_path(type: 'archived'), class: @type == 'archived' ? active_class : inactive_class do %>
            Archived Assignments
          <% end %>
        </nav>
      </div>
    </div>
  </div>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <% if @assignments.empty? %>
      <h1 class="p-10 text-lg text-gray-600">There are no assignments for you at the moment. Check back again soon</h1>
    <% end %>
    <ul>
      <% @assignments.each do |assignment| %>
      <li>
        <%= link_to translation_assignment_path(assignment), class: 'block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out' do %>
          <%= render 'translation_assignments/assignment_link', assignment: assignment, color: 'red' %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
